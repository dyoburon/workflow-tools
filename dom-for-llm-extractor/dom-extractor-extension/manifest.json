{
  "manifest_version": 3,
  "name": "DOM Extractor for LLMs",
  "version": "1.0.0",
  "description": "Extract structured DOM context from web pages, optimized for AI agents and LLMs",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/*.js", "content/*.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "activate-drag-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+Period",
        "mac": "Command+Shift+Period"
      },
      "description": "Activate drag selection mode"
    },
    "activate-precision-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+Comma",
        "mac": "Command+Shift+Comma"
      },
      "description": "Activate precision inspection mode"
    }
  }
}
